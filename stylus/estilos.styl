@import "normalize.styl"
@import "fonts.styl"

gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B

body
	font-size 16px
	font-family 'Varela Round', sans-serif

figure
	margin 0
a
	text-decoration none

img
	vertical-align top
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black, 0.3)
	
.action	
	color white
	font-size 1.2em
	margin-right .5em
	
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.border-button
	border-bottom 1px solid gris_claro
	
.container
	padding 1.4rem
	font-size 0
	text-align center

.name
	color gris_oscuro

.menu
	display none

.relative
	position relative
	
.padding
	padding 1em

.padding-tb
	padding 1em 0

.progress
	margin 1em 0
	position relative
	
	.min
	.max
		font-size 0.8em
		top -5px
		position absolute
	.min
		left 0
	.max 
		right 0
		
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
	
.author
	color gris_claro

.center-block
	margin 0 auto
	
.center-text
	text-align center

.right-text
	text-align right

.relative
	position relative
	
.header
	height 3.5em
	//a
	//	display none
	.title
		font-size 1.1em
		text-align center
		color black
		margin 0
		line-height 3.5em
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	width 8rem
	text-align left

	&:nth-child(even)
		margin-right 0

	p
		margin .5em 0
		
.playing
	&.small
		width 20em

