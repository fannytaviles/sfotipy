@import "nib"
@import "normalize.styl"
@import "fonts.styl"

vendor-prefixes = webkit o ms moz official
gris_oscuro = #333333
gris_claro = #818181
rojo = #BD255B
gris_mas_claro = #F0F0F0

//animacion(parametro)
//	-webkit-animation parametro
//	-moz-animation parametro
//	-o-animation parametro
//	-ms-animation parametro
	
body
	font-size 16px
	font-family 'Varela Round', sans-serif

figure
	margin 0
a
	text-decoration none

img
	vertical-align top
	
ul
	margin 0
	padding 0
.actions
	position absolute
	bottom 0
	left 0
	right 0
	background rgba(black, 0.3)
	
.action	
	color white
	font-size 1.2em
	margin-right .5em
	
	&:last-child
		margin-right 0
	&.gray
		color gris_claro
.button-menu
	color gris_oscuro
	left .5em
	margin-top -10px
	position absolute
	top 50%

.border-button
	border-bottom 1px solid gris_claro
	
.container
	padding 1.4rem
	font-size 0
	text-align center

.name
	color gris_oscuro

.menu
	display none

.relative
	position relative
	
.padding
	padding 1em

.padding-tb
	padding 1em 0

.right
	float right
	
.left 
	float left
	
.progress
	margin 1em 0
	position relative
	
	.min
	.max
		font-size 0.8em
		top -5px
		position absolute
	.min
		left 0
	.max 
		right 0
		
	.total
		background gris_claro
		border-radius 5px
		height 5px
		width 75%
		margin 0 auto
	.state
		background rojo
		border-radius 5px
		height 5px
		position relative
		width 30%
		animation 10s state infinite linear

	.circle
		background gris_oscuro
		border-radius 50%
		height 10px
		position absolute
		right 0
		top -2px
		width 10px
		animation 1s circle infinite
		
@keyframes state
	0%
		width 0
	100%
		width 100%	
		
@keyframes circle
	0%
		transform scale(1)
	100%
		transform scale(2)
		opacity 0
.author
	color gris_claro

.center-block
	margin 0 auto
	
.center-text
	text-align center

.right-text
	text-align right

.relative
	position relative
	
.header
	height 3.5em
	//a
	//	display none
	.title
		font-size 1.1em
		text-align center
		color black
		margin 0
		line-height 3.5em
.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	width 8rem
	text-align left

	&:nth-child(even)
		margin-right 0

	p
		margin .5em 0
		
.playing
	&.small
		width 20em
		margin 0 auto
.input
	border 1px solid gris_claro
	height 2.5em
	border-radius 5px
	padding 0 1em 0 2em		
	
.search-icon
	position absolute
	left 0.5em
	top 0.8em
	color gris_claro
	
.close-icon
	position absolute
	top 0.5em
	color gris_claro
	right 0.5em
	font-size 1.2em
.wrap
	width 1000px
	
.round
	border-radius 50%
	overflow hidden 
	
.playlist
	width 22em
	padding 0 2em
	border-left 1px solid gris_claro
	display none
	.list
		list-style none
	.item
		padding 1em 0
	.action
		font-size 0.8em
		
.isotipo
		width 122px
.logo
	padding 1.3em 0
	overflow hidden
	background white
	display none
.avatar
	width 38px
	height 38px
.username
	color gris_claro
	position relative
	top 9px
	margin-left .5em
	&:after
		content ""
		border-left 7px solid transparent
		border-top 10px solid gris_claro
		border-right 7px solid transparent
		display inline-block
		margin-left 0.4em
	
@media screen and (min-width:480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width:1000px)
	body
		background gris_mas_claro
	.button-menu
		display none
	.menu
		display block
		background gris_mas_claro
		overflow hidden
		border-top 1px solid gris_claro
		.item
			float left
			list-style none
			a
				color gris_oscuro
				text-transform uppercase
				padding 1em 
				display block
				border 5px solid transparent
				&:hover
					border-top 5px solid gris_claro
				
	.music
		width 32.5em
		float left
		.name
		.author
			display none
	.header
		height auto
		border-bottom 1px solid transparent
		.title
			display none
	.playing
		padding-top 0.3em
		&.large
			margin 0 auto
			width 62.5em
			overflow hidden
	.logo
		display block
	.playlist
		display block